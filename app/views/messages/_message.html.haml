.message
  .message-info
    .message-info__user
      = message.user.name
    .message-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M:%S")
  .messages__text
    - if message.body.present?
      %p.massage-text__body
        = message.body
    = image_tag message.image.url, class: "message-text__image" if message.image.present?
